<SettingsScreen>:
    BoxLayout:
        Button:
            text: 'My settings button'
        Button:
            text: 'Back to menu'
            on_press: root.manager.current = 'menu'

<NounGenderScreen>:                    
    BoxLayout:
        orientation: "vertical"
        Label:
            font_name: "assets/fonts/amatic/AmaticSC-Regular.ttf"
            text: root.my_text
            font_size: "80dp"
            # size_hint: .5, None
            # pos_hint: {"center_x": .5}
        Label:
            font_name: "assets/fonts/amatic/AmaticSC-Regular.ttf"
            text: root.translation
            font_size: "30dp"
            size_hint: .5, .5
            pos_hint: {"center_x": .5}
            color: 0,1,1,1
        BoxLayout:
            orientation: "horizontal"
            Label:
                font_name: "assets/fonts/amatic/AmaticSC-Regular.ttf"
                text: root.correct_answers
                font_size: "25dp"
                color: 0,1,0,1
                # size_hint: .5, None
                pos_hint: {"center_x": .5}
            Label:
                font_name: "assets/fonts/amatic/AmaticSC-Regular.ttf"
                text: root.incorrect_answers
                font_size: "25dp"
                color: 1,0,0,1
                # size_hint: .5, None
                pos_hint: {"center_x": .5}
        BoxLayout:
            orientation: "horizontal"
            Button:
                id: Der
                text: "Der"
                on_press: root.on_button_click(Der)
            Button:
                id: Die
                text: "Die"
                on_press: root.on_button_click(Die)
            Button:
                id: Das
                text: "Das"
                on_press: root.on_button_click(Das)
        BoxLayout:
            Button:
                text: "Back"
                on_press: 
                    root.manager.transition.direction = 'right'
                    root.manager.current = 'menu'

