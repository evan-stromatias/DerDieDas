<MenuScreen>:
    BoxLayout:
        orientation: "vertical"
        Label:
            text: " "
        Label:
            font_name: "assets/fonts/amatic/AmaticSC-Regular.ttf"
            text: "Der Die Das"
            font_size: "120dp"
        Label:
            text: " "
        BoxLayout:
            Button:
                text: 'Noun genders'
                on_press: 
                    root.manager.transition.direction = 'left'
                    root.manager.current = 'noun_gender'
            Button:
                text: 'Noun plural'
                on_press:
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'noun_plural'
            Button:
                text: 'Noun translation'
                on_press:
                    root.manager.transition.direction = 'left' 
                    root.manager.current = 'noun_translate'
            # Button:
            #     text: 'Noun accent'
            #     on_press: root.manager.current = 'settings'
        Button:
            text: 'Stats'
            on_press: 
                root.manager.transition.direction = 'left' 
                root.manager.current = 'stats'
        Button:
            text: 'Settings'
            on_press: root.manager.current = 'settings'
        Button:
            id: btnExit
            text: 'Quit'
            on_press: app.stop() 

